{
  "name": "kv-reader",
  "version": "0.0.0-semantic-release",
  "description": "decode kv config files as used by svn",
  "keywords": [
    "svn",
    "kv",
    "config"
  ],
  "main": "dist/reader.js",
  "module": "src/reader.js",
  "scripts": {
    "cover": "nyc ava",
    "test": "ava",
    "docs": "jsdoc2md --configure doc/jsdoc.json -l off -t doc/README.hbs -f src/*.js >README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "pretest": "rollup -c tests/rollup.config.js",
    "precover": "rollup -c tests/rollup.config.js",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/kv-reader.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/kv-reader/issues"
  },
  "homepage": "https://github.com/arlac77/kv-reader#readme",
  "dependencies": {
    "line-input-stream": "^1.0.1"
  },
  "devDependencies": {
    "cracks": "3.1.2",
    "jsdoc-to-markdown": "^3.0.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^11.2.1",
    "rollup": "^0.50.0",
    "semantic-release": "^8.2.0",
    "ava": "^0.22.0",
    "rollup-plugin-babel": "^3.0.2",
    "jsdoc-babel": "^0.3.0",
    "xo": "^0.19.0"
  },
  "release": {
    "verifyRelease": "cracks"
  },
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=8.7.0"
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./build/coverage"
  },
  "ava": {
    "files": [
      "build/test-bundle.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "xo": {
    "space": true
  }
}
