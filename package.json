{
  "name": "kv-reader",
  "version": "0.0.0-semantic-release",
  "description": "decode kv config files as used by svn",
  "keywords": [
    "svn",
    "kv",
    "config"
  ],
  "main": "dist/reader.js",
  "module": "src/reader.js",
  "scripts": {
    "cover": "nyc ava",
    "test": "ava",
    "docs": "jsdoc2md --configure doc/jsdoc.json -l off -t doc/README.hbs -f src/*.js >README.md",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "prepublish": "rollup --output=dist/reader.js -c -- src/reader.js",
    "pretest": "rollup -c rollup.config.test.js",
    "precover": "rollup -c rollup.config.test.js",
    "posttest": "markdown-doctest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/kv-reader.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/kv-reader/issues"
  },
  "homepage": "https://github.com/arlac77/kv-reader#readme",
  "dependencies": {
    "line-input-stream": "^1.0.1"
  },
  "devDependencies": {
    "cracks": "3.1.2",
    "cz-conventional-changelog": "^2.0.0",
    "jsdoc-to-markdown": "^3.0.0",
    "markdown-doctest": "^0.9.1",
    "nyc": "^10.3.2",
    "rollup": "^0.41.6",
    "semantic-release": "^6.3.6",
    "ava": "^0.19.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-multi-entry": "^2.0.1",
    "jsdoc-babel": "^0.3.0",
    "babel-plugin-transform-async-generator-functions": "^6.24.1",
    "xo": "^0.18.2"
  },
  "release": {
    "verifyRelease": "cracks"
  },
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "engines": {
    "node": ">=7.10.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "ava": {
    "files": [
      "build/test-bundle.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "xo": {
    "space": {}
  }
}